<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/tailwind.css" />
    <title>Document</title>
  </head>
  <body>
    <!-- Top gradient bar -->
    <div
      class="h-1 bg-gradient-to-r from-indigo-400 via-indigo-600 to-indigo-700 max-w-sm mx-auto rounded-tr-full rounded-tl-full mt-5"
    ></div>
    <!-- /Top gradient bar -->

    <!-- Card component -->
    <div
      class="border bg-white border-gray-300 shadow rounded-md rounded-tr-none rounded-tl-none p-4 max-w-sm mx-auto border-t-0"
    >
      <!-- Thumbnail -->
      <img
        src="https://img.youtube.com/vi/<%= video.videoID %>/maxresdefault.jpg"
        alt="YouTube Video Thumbnail"
        class="rounded"
      />
      <!-- Thumbnail -->

      <!-- Title -->
      <p class="font-bold text-lg text-gray-800 pt-2"><%= video.title %></p>
      <!-- /Title -->

      <!-- Channel name -->
      <span
        class="inline-block bg-gray-200 rounded-md px-2 py-0 text-xs font-bold text-gray-700 mb-2 mt-1"
      >
        <%= video.owner %>
      </span>
      <!-- /Channel name -->

      <!-- Button with leading icon-->
      <button
        class="flex items-center px-4 py-2 mt-4 pl-3 w-full justify-center rounded-lg shadow-lg bg-indigo-600 text-white font-bold focus:outline-none focus:shadow-outline hover:bg-indigo-500 active:bg-indigo-700"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          class="w-5 h-5 mr-2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
          />
        </svg>
        Download
      </button>
      <!-- /Button with leading icon -->
    </div>
    <!-- /Card component -->
  </body>
</html>
